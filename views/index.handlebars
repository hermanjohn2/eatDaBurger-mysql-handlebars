{{!-- Headline --}}

<h1 class="text-center">Eat Da Burger</h1>








{{!-- Burger Submit Form --}}
<div class="grid-x grid-padding-x align-center">
    <div class="cell small-4">
        <p class="text-center">Name Your Burger:</p>
        <form class="create-form">
            <div class="form-group input-group input-group-rounded">
                <label for="burger"></label>
                <input class="input-group-field" type="text" id="burger" name="name" />
                <div class="input-group-button">
                    <button type="submit" class="button primary">
                        <i class="fi-plus large"></i>
                    </button>
                </div>

            </div>
        </form>
    </div>
</div>



<div class="grid-x grid-padding-x align-spaced">

    {{!-- Burgers yet to be devoured --}}
    <div class="cell small-4">
        <table class="unstriped">
            <thead>
                <tr>
                    <th class="text-center">Let's Eat!</th>
                </tr>
            </thead>
            <tbody>

                {{#each burgers}}
                {{#unless isDevoured}}
                {{> burgers/burger-block isDevoured=false}}
                {{/unless}}
                {{/each}}

            </tbody>
        </table>
    </div>

    <div class="cell small-4">
        <img src="/assets/images/burger-logo-trans.png" alt="A hamburger logo">
    </div>

    <div class="cell small-4">
        <table class="unstriped">
            <thead>
                <tr>
                    <th class="text-center">Devoured Burgers</th>
                </tr>
            </thead>
            <tbody>

                {{#each burgers}}
                {{#if isDevoured}}
                {{> burgers/burger-block isDevoured=true}}
                {{/if}}
                {{/each}}

            </tbody>
        </table>
    </div>
</div>